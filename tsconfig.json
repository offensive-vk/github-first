{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["ES2015"],
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./",
        "moduleResolution": "NodeNext",
        "baseUrl": "./",
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "newLine": "lf",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}